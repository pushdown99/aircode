<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonToggleCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="259dp"
        android:layout_marginRight="259dp"
        android:text="Start Capturing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewReceived"
        app:layout_constraintTop_toBottomOf="@+id/textViewReceived" />

    <TextView
        android:id="@+id/textViewStatusInp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="294dp"
        android:layout_marginRight="294dp"
        android:text="Status: Idle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="294dp"
        android:layout_marginRight="294dp"
        android:text="Received:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewStatusInp"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatusInp" />

    <TextView
        android:id="@+id/textViewMessageToSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Message to send:"
        app:layout_constraintStart_toStartOf="@+id/textViewStatusOut"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatusOut" />

    <TextView
        android:id="@+id/textViewStatusOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="294dp"
        android:layout_marginRight="294dp"
        android:text="Status: Idle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonToggleCapture"
        app:layout_constraintTop_toBottomOf="@+id/buttonToggleCapture" />

    <Button
        android:id="@+id/buttonTogglePlayback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Send Message"
        app:layout_constraintStart_toStartOf="@+id/textViewMessageToSend"
        app:layout_constraintTop_toBottomOf="@+id/textViewMessageToSend" />

</androidx.constraintlayout.widget.ConstraintLayout>